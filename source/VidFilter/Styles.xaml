<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="StretchControlStyle">
        <Setter Property="Control.HorizontalAlignment" Value="Stretch"/>
        <Setter Property="Control.VerticalAlignment" Value="Stretch"/>
    </Style>
    <Style x:Key="BorderStyle" BasedOn="{StaticResource StretchControlStyle}">
        <Setter Property="Border.BorderThickness" Value="3"/>
        <Setter Property="Border.BorderBrush" Value="Gray"/>
    </Style>
    <Style x:Key="MovieSelectorStyle" BasedOn="{StaticResource StretchControlStyle}">
        <Setter Property="Control.Background" Value="DarkKhaki"/>
    </Style>
    <Style x:Key="MoviePropertyGridStyle" BasedOn="{StaticResource StretchControlStyle}">
        <Setter Property="Control.Background" Value="Khaki"/>
    </Style>
    <Style x:Key="ChangeStackPanelStyle" BasedOn="{StaticResource StretchControlStyle}">
        <Setter Property="StackPanel.Orientation" Value="Horizontal"/>
        <Setter Property="Control.Margin" Value="3,3,0,3"/>
    </Style>
    <Style x:Key="ChangeStackPanelControlStyle">
        <Setter Property="Control.Margin" Value="0,0,3,0"/>
    </Style>
</ResourceDictionary>